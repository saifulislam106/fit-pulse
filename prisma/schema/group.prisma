model Group{
    id          String       @id @default(uuid())
    name        String
    description String?
    thumbnail   String?
    createdBy   String
    creator     User       @relation(fields: [createdBy], references: [id])
    members     User[]   @relation("UserGroups")
    posts       Post[]
    createdAt   DateTime  @default(now())
    updatedAt   DateTime  @updatedAt
}
